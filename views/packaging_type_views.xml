<odoo>
    
    <record id="view_packaging_type_form" model="ir.ui.view">
        <field name="name">packaging.type.form</field>
        <field name="model">logistics.packaging_type</field>
        <field name="arch" type="xml">
            <form string="Packaging Type">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    
    <record id="view_packaging_type_tree" model="ir.ui.view">
        <field name="name">packaging.type.tree</field>
        <field name="model">logistics.packaging_type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    
    <record id="action_packaging_type" model="ir.actions.act_window">
        <field name="name">Packaging Types</field>
        <field name="res_model">logistics.packaging_type</field>
        <field name="view_mode">tree,form</field>
    </record>

    
    <menuitem id="menu_logistics_packaging_type" parent="menu_logistics_configuration" name="Packaging Types" action="action_packaging_type"/>
</odoo>
