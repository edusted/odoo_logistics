<odoo>
    <record id="view_transport_request_form" model="ir.ui.view">
        <field name="name">transport.request.form</field>
        <field name="model">logistics.transport_request</field>
        <field name="arch" type="xml">
            <form string="Transport Request">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="request_type"/>
                        <field name="sender_name"/>
                        <field name="receiver_name"/>
                        <field name="responsible_manager"/>
                        <field name="package_type_id"/>
                        <field name="package_qty"/>
                        <field name="priority_id"/>
                        <field name="total_weight"/>
                        <field name="total_volume"/>
                        <field name="expense_category_id"/>
                    </group>
                </sheet>
                <footer>
                    <!-- Аттрибут states в 17 оду не поддерживается -->
                    <button name="action_confirm" type="object" string="Confirm" class="btn-primary" />
                    <button name="action_cancel" type="object" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_transport_request_tree" model="ir.ui.view">
        <field name="name">transport.request.tree</field>
        <field name="model">logistics.transport_request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="request_type"/>
                <field name="sender_name"/>
                <field name="receiver_name"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_transport_request" model="ir.actions.act_window">
        <field name="name">Transport Request</field>
        <field name="res_model">logistics.transport_request</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
